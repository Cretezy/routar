{
  "name": "routex",
  "version": "1.0.0-rc.1",
  "description": "Modern Node router",
  "keywords": [
    "router",
    "routex"
  ],
  "homepage": "https://routex.js.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/routexjs/routex"
  },
  "license": "MIT",
  "author": "Charles Crete <charles@cretezy.com>",
  "files": [
    "dist"
  ],
  "main": "dist/lib/index.js",
  "typings": "dist/types/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "format": "prettier --write '**/*.{js,ts,md,json}'",
    "lint": "eslint 'src/**/*.ts'",
    "prepublishOnly": "run-s format lint test build",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "watch": "tsc -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "transform": {
      ".ts": "ts-jest"
    }
  },
  "dependencies": {
    "@types/node": "^13.1.0",
    "parseurl": "^1.3.3",
    "path-to-regexp": "^6.1.0",
    "qs": "^6.9.1",
    "throng": "^4.0.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/parseurl": "^1.3.1",
    "@types/path-to-regexp": "^1.7.0",
    "@types/qs": "^6.9.0",
    "@types/supertest": "^2.0.8",
    "@types/throng": "^4.0.2",
    "@types/uuid": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "codecov": "^3.6.1",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^4.0.2",
    "jest": "^24.9.0",
    "jest-config": "^24.9.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
